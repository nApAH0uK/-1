<Window x:Class="Labaratorka_Yarmingin_BPI_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labaratorka_Yarmingin_BPI_23_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="390" Width="800" MinHeight="390" MinWidth="690">
    <Grid Style="{DynamicResource GridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label
            Style="{DynamicResource LabelStyle}"
            Grid.Row="0" 
            Grid.Column="0" 
            Content="Наименование товара:" 
            Margin="5,5,5,5"/>

        <TextBox 
            x:Name="nameTextBox" 
            Grid.Row="0" 
            Grid.Column="1" 
            Margin="5,5,5,5" 
            Width="Auto"/>

        <Label
            Style="{DynamicResource LabelStyle}"
            Grid.Row="1" 
            Grid.Column="0" 
            Content="Цена в рублях:" 
            Margin="5,5,5,5"/>

        <TextBox 
            x:Name="priceTextBox" 
            Grid.Row="1" 
            Grid.Column="1" 
            Margin="5,5,5,5" 
            Width="Auto"/>
        <Label
            Style="{DynamicResource LabelStyle}"
            Grid.Row="2" 
            Grid.Column="0" 
            Content="Изготовитель:" 
            Margin="5,5,5,5"/>

        <TextBox 
            x:Name="manufacturerTextBox" 
            Grid.Row="2" 
            Grid.Column="1" 
            Margin="5,5,5,5" 
            Width="Auto"/>

        <Button
            Style="{DynamicResource ButtonStyle}"
            x:Name="calculateButton" 
            Grid.ColumnSpan="1"
            Grid.Row="3" 
            Grid.Column="1"
            Content="Рассчитать" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top" 
            Width="100" 
            Height="30"/>

        <TextBlock
            Style="{DynamicResource TextBlockStyle}"
            x:Name="resultText" 
            Grid.Row="4" 
            Grid.Column="0" 
            Grid.ColumnSpan="2" 
            Margin="5,5,5,0" 
            FontWeight="Bold" 
            FontSize="14"
            Height="101"
            TextWrapping="Wrap"  
            VerticalAlignment="Top"/>

        <Button
            Style="{DynamicResource ButtonStyle}"
            x:Name="LightButton"
            Click="LightButton_Click"
            Grid.Row="5" 
            Grid.Column="0"
            Grid.ColumnSpan="2" 
            Content="Светлая тема"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="5" 
            Width="200"
            Height="100"/>

        <Button
            Style="{DynamicResource ButtonStyle}"
            x:Name="DarkButton"
            Click="DarkButton_Click"
            Grid.Row="5" 
            Grid.Column="1" 
            Content="Темная тема"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="5"
            Width="200"
            Height="100"/>

    </Grid>
</Window>
